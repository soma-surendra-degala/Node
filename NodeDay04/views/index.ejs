<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %> 

    <div class="blogs-content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0){ %>
          <% blogs.forEach(blog =>{ %>
            <a class="single" href="/blogs/<%= blog.id %>">
            <h1><%= blog.title %></h1></a>
            <p><%= blog.snippet %></p>
            <p><%= blog.body %></p>
          <% }) %>
        <% } else { %>
          <p>No blogs to display yet.</p>
        <% } %>

    </div>

    <%- include('./partials/footer.ejs') %>


</body>
</html>